SOURCE_URI="{{REPO_URL}}/archive/v1.1.1.tar.gz"
CHECKSUM_SHA256="00000000000000000000000000000000000000000000000"

ARCHITECTURES="x86_64"

PROVIDES="
	myth = $portVersion
	cmd:myth = $portVersion
	"
REQUIRES="
	haiku
	lib:libwebkit2_4.0
	"

BUILD_REQUIRES="
	haiku_devel
	cmd:cargo
	cmd:npm
	"

BUILD()
{
	cd ui
	npm install
	npm run tauri build
}

INSTALL()
{
	mkdir -p $binDir
	cp ui/src-tauri/target/release/myth $binDir
}
