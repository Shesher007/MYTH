{
    "app-id": "org.myth.myth",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "myth",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "myth",
            "buildsystem": "simple",
            "build-commands": [
                "install -D myth /app/bin/myth"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "myth-linux-x64",
                    "dest-filename": "myth"
                }
            ]
        }
    ]
}
